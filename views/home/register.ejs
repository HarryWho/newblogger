<div class="h1 text-center mt-3 text-primary"><i class="fa-solid fa-book-open-reader"></i> Story Book</div>
<%- include('../partials/_error.ejs') %>
  <div class="card col-lg-6 mx-auto mt-5">
    <form action="/register" method="POST">
      <fieldset>
        <legend class="h1text-center text-info">Register</legend>
        <div class="mb-3">
          <label for="displayName" class="form-label">Display Name</label>
          <input type="text" id="displayName" name="displayName" class="form-control" placeholder="Display Name" value="<%= typeof fields != 'undefined' ? fields.displayName : '' %>">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Email" value="<%= typeof fields != 'undefined' ? fields.email : '' %>">

        </div>
        <div class="mb-3">

          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Password" value="<%= typeof fields != 'undefined' ? fields.password : '' %>">

        </div>
        <div class="mb-3">
          <label for="password2" class="form-label">Retype Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Retype Password" value="<%= typeof fields != 'undefined' ? fields.password2 : '' %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button> Have an account? <a href="/" class="text-bold">Login</a>
      </fieldset>
    </form>
  </div>