<div class="h1 text-center mt-3 text-primary"><i class="fa-solid fa-book-open-reader"></i> Story Book</div>

<div class="card col-lg-6 mx-auto mt-5">
  <form action="/register" method="POST">
    <fieldset>
      <legend class="h1text-center text-info">Register</legend>
      <div class="mb-3">
        <label for="displayName" class="form-label">Display Name</label>
        <input type="text" id="displayName" name="displayName" class="form-control" placeholder="Display Name">
      </div>
      <div class="mb-3">
        <label for="googleId" class="form-label">Email</label>
        <input type="email" id="googleId" name="googleId" class="form-control" placeholder="Email">

      </div>
      <div class="mb-3">

        <label for="password" class="form-label">Password</label>
        <input type="password" id="googleId" name="password" class="form-control" placeholder="Password">

      </div>
      <div class="mb-3">
        <label for="password2" class="form-label">Retype Password</label>
        <input type="email" id="password2" name="password2" class="form-control" placeholder="Retype Password">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/" class="text-bold ml-3">Login</a>
    </fieldset>
  </form>
</div>