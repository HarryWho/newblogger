<div class="h1 text-center mt-3 text-primary"><i class="fa-solid fa-book-open-reader"></i> Story Book</div>

<div class="card col-lg-6 mx-auto mt-5">
  <div class="card-title text-center">
    <h3>Login</h3>
  </div>
  <form action="'/auth/local" method="POST">
    <div class="mb-3">
      <label for="displayName" class="form-label">Email address</label>
      <input type="text" class="form-control" id="displayName" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <button type="submit" class="btn btn-primary ml-3">Submit</button>
    <a href="/register" class="mx-4 text-bold">Register</a>
  </form>
  <div class="card-body">
    <a href="/auth/google" class="btn btn-danger d-block">Log in with Google</a>
  </div>
</div>