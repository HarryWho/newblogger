<!-- Main content -->
<section class="content">

  <div class="row">
    <div class="col-md-3">

      <!-- Profile Image -->
      <div class="box box-primary">
        <div class="box-body box-profile text-center">
          <img class="rounded-circle center" src="<%= user.image%>" alt="User profile picture">

          <h3 class="profile-username">
            <%= user.displayName %>
          </h3>

          <p class="text-muted">Software Engineer</p>

          <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
              <b class="float-start">Followers</b> <a class="float-end">0</a>
            </li>
            <li class="list-group-item">
              <b class="float-start">Following</b>
              <a class="float-end">0</a>
            </li>
            <li class="list-group-item">
              <b class="float-start">Friends</b> <a class="float-end">0</a>
            </li>
          </ul>

          <a href="#" class="btn btn-primary btn-block "><b>Follow</b></a>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->

      <!-- About Me Box -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title ">About Me</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body ">
          <strong><i class="fa fa-book mr-5"></i> Education</strong>

          <p class="text-muted ">
            <% if(typeof profile!='undefined') { %>
              <%= profile.school %><br>
                <%= profile.level %>
                  <% } %>
          </p>

          <hr>

          <strong><i class="fa fa-map-marker margin-r-5 "></i> Qualifications</strong>
          <% if(typeof profile.qualifications[0] != 'undefined') { %>
            <p class="text-muted ">
              <% profile.qualifications[0].qaulification.forEach(qual => {%>
                <%= qual %> <br>
                  <%})%>
            </p>
            <%}%>

              <hr>

              <strong><i class="fa fa-pencil margin-r-5 "></i> Skills</strong>

              <p>
                <%if(typeof profile.skills[0] != 'undefined'){%>
                  <% profile.skills[0].skill.forEach(skill=>{ %>
                    <span class="badge rounded-pill <%- randomColor('bg') %>"><%= skill%></span>
                    <%})%>
                      <%}%>
              </p>

              <hr>

              <strong><i class="fa fa-file-text"></i> Notes</strong>

              <p>
                <%if(typeof profile != 'undefined'){%>
                  <%= profile.about %>
                    <%}%>
              </p>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
    <div class="col-md-9 ">
      <div class="nav-tabs ">
        <ul class="nav nav-tabs " role="tablist ">
          <li class="nav-item "><a href="#" class="nav-link button-link" id="activity-tab" data-bs-target="#activity" data-bs-toggle="tab">Activity</a></li>
          <li class="nav-item "><a href="#" class="nav-link button-link" id="timeline-tab" data-bs-target="#timeline" data-bs-toggle="tab">Timeline</a></li>
          <li class="nav-item "><a href="#" class="nav-link button-link" id="settings-tan" data-bs-target="#settings" data-bs-toggle="tab">Settings</a></li>
        </ul>
        <div class="tab-content ">
          <div class="tab-pane show fade active" role="tabpanel" id="activity">

            <%- include('./dashstories.ejs') %>

          </div>
          <!-- /.tab-pane -->
          <div class="tab-pane fade" id="timeline" role="tabpanel">
            <%- include('./timeline.ejs') %>
          </div>
          <!-- /.tab-pane -->

          <div class="tab-pane fade" id="settings" role="tabpanel">
            <%- include('./profile_form.ejs') %>
          </div>
          <!-- /.tab-pane -->
        </div>
        <!-- /.tab-content -->
      </div>
      <!-- /.nav-tabs-custom -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->

</section>
<!-- /.content -->